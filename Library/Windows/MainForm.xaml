<Window x:Class="Library.Windows.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows"
        mc:Ignorable="d"
        Title="Учет книг в библиотеке" Height="600" Width="1000">
    <Grid>
        <!--Верстка-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="400*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--Навигация-->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
            <Button x:Name="bt_orders"
                Style="{StaticResource Button_Style}"
                Content="Заказы"
                Click="Go_To_Orders"/>
            <Button x:Name="bt_readers"
                Style="{StaticResource Button_Style}"
                Content="Читатели"/>
            <Button x:Name="bt_books"
                Style="{StaticResource Button_Style}"
                Content="Книги"
                Click="Go_To_Books"/>
            <Button x:Name="bt_publications"
                Style="{StaticResource Button_Style}"
                Content="Издания"/>
        </StackPanel>
        
        <!--Фрейм для страниц-->
        <Frame x:Name="main_frame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
        
        <!--Техническая информация-->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock x:Name="tb_current_user"
                       Style="{StaticResource TextBlock_Style}"
                       FontSize="20"
                       Width="Auto">
        </TextBlock>
        <Button x:Name="bt_logout"
                Background="White"
                Width="200"
                Height="50"
                Margin="20 0 0 0"
                Click="Exit_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Выйти"
                               Style="{StaticResource Lable_Style}"
                               FontSize="30"
                               VerticalContentAlignment="Center">
                        </Label>
                        <Image Source="/Resources/exit_door.png"></Image>
                    </StackPanel>
                </Button.Content>   
        </Button>
        </StackPanel>
    </Grid>
</Window>
