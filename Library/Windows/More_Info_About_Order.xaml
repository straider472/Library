<Window x:Class="Library.Windows.More_Info_About_Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Windows"
        mc:Ignorable="d"
        Title="Подробная информация о заказе" Height="400" Width="400">
    <Grid>
        <!--Верстка модального окна-->
        <Grid.RowDefinitions>
            <RowDefinition Height="300*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--Информация о заказе-->
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="tb_fio_reader"
                       Style="{StaticResource TextBlock_Style}"
                       FontSize="18"
                       Width="Auto">
            </TextBlock>
            <TextBlock x:Name="tb_fio_user"
                       Style="{StaticResource TextBlock_Style}"
                       FontSize="18"
                       Width="Auto">
            </TextBlock>
            <TextBlock x:Name="tb_date_inception"
                       Style="{StaticResource TextBlock_Style}"
                       FontSize="18"
                       Width="Auto">
            </TextBlock>
            <TextBlock x:Name="tb_date_end"
                       Style="{StaticResource TextBlock_Style}"
                       FontSize="18"
                       Width="Auto">
            </TextBlock>
            <TextBlock x:Name="tb_count_books"
                       Style="{StaticResource TextBlock_Style}"
                       FontSize="18"
                       Width="Auto">
            </TextBlock>
            <TextBlock x:Name="tb_title"
                       Style="{StaticResource TextBlock_Style}"
                       FontSize="18"
                       Width="Auto"
                       Text="Книги:">
            </TextBlock>
            <TextBlock x:Name="tb_books"
                       Style="{StaticResource TextBlock_Style}"
                       FontSize="14"
                       Width="Auto"
                       >  
            </TextBlock>
        </StackPanel>
        
        <!--Кнопка закрытия окна-->
        <Button x:Name="bt_back_to_orders" Grid.Row="1"
                Style="{StaticResource Button_Style}"
                Content="ОК"
                Click="Back_To_Orders"/>
    </Grid>
</Window>
