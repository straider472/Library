<Application x:Class="Library.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Library"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--Надписи-->
        <Style TargetType="Label" x:Key="Lable_Style">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Times new Roman"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
                <Setter Property="FontStyle" Value="Italic"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            </Style.Setters>
        </Style>
        <!--Текстовые поля-->
        <Style TargetType="TextBox" x:Key="TextBox_Style">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Times new Roman"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
                <Setter Property="FontStyle" Value="Italic"></Setter>
                <Setter Property="Width" Value="250"></Setter>
                <Setter Property="Height" Value="40"></Setter>
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            </Style.Setters>
        </Style>
        <!--Текстовые блоки-->
        <Style TargetType="TextBlock" x:Key="TextBlock_Style">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Times new Roman"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
                <Setter Property="FontStyle" Value="Italic"></Setter>
                <Setter Property="Width" Value="250"></Setter>
                <Setter Property="Height" Value="40"></Setter>
                <Setter Property="FontSize" Value="30"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            </Style.Setters>
        </Style>
        <!--PasswordBoxs-->
        <Style TargetType="PasswordBox" x:Key="PasswordBox_Style">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Times new Roman"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
                <Setter Property="FontStyle" Value="Italic"></Setter>
                <Setter Property="Width" Value="250"></Setter>
                <Setter Property="Height" Value="40"></Setter>
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            </Style.Setters>
        </Style>
        <!--Кнопки-->
        <Style TargetType="Button" x:Key="Button_Style">
            <Style.Setters>
                <Setter Property="FontFamily" Value="Times new Roman"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
                <Setter Property="FontStyle" Value="Italic"></Setter>
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="Width" Value="200"></Setter>
                <Setter Property="Height" Value="50"></Setter>
                <Setter Property="Background" Value="Beige"></Setter>
                <Setter Property="Margin" Value="20"></Setter>
            </Style.Setters>
        </Style>
        <!--Таблицы-->
        <Style TargetType="DataGrid" x:Key="DataGrid_Style">
            <Style.Setters>
                <Setter Property="CanUserAddRows" Value="False"></Setter>
                <Setter Property="CanUserDeleteRows" Value="False"></Setter>
                <Setter Property="AutoGenerateColumns" Value="False"></Setter>
                <Setter Property="FontFamily" Value="Times new Roman"></Setter>
                <Setter Property="Background" Value="Beige"></Setter>
            </Style.Setters>
        </Style>
    </Application.Resources>
</Application>
