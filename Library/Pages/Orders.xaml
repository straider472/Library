<Page x:Class="Library.Pages.Orders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="">

    <Grid>
        <!--Верстка страницы-->
        <Grid.RowDefinitions>
            <RowDefinition Height="400*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--Таблица заказов-->
        <DataGrid x:Name="dt_orders"
                  Style="{StaticResource DataGrid_Style}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Читатель" Binding="{Binding Readers.First_Name}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTextColumn Header="Кто выдал" Binding="{Binding Users.Middle_Name}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата выдачи" Binding="{Binding Date_Inception}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата возврата" Binding="{Binding Date_End}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTextColumn Header="Кол-во книг" Binding="{Binding Count_Books}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTextColumn Header="Просрочен" Binding="{Binding Status}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="bt_more"
                                    Style="{StaticResource Button_Style_Data_Grid}"
                                    Content="Подробнее"
                                    Click="Click_More_Info_About_Order"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="bt_delete"
                                    Style="{StaticResource Button_Style_Data_Grid}"
                                    Width="30" Height="30"
                                    Click="Delete_Order">
                                <Button.Content>
                                    <Image Source="/Resources/trash_basket.png"></Image>
                                </Button.Content>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!--Кнопки управления-->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="add_orders" Grid.Row="1"
                Style="{StaticResource Button_Style}"
                Content="Сформировать"
                Margin="20 0 0 0"
                Click="Add_Order_Click"/>
            <Button x:Name="bt_update" Grid.Row="1"
                Style="{StaticResource Button_Style}"
                Content="Изменить"
                Margin="20 0 0 0"/>
        </StackPanel>
    </Grid>
</Page>
