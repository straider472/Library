<Page x:Class="Library.Pages.Add_Order"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="">

    <Grid>
        <!--Верстка страницы-->
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="300*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Заголовок-->
        <Label x:Name="title"
               Grid.Row="0" Grid.Column="0"
               Style="{StaticResource Lable_Style}"
               FontSize="30"
               Content="Формирование заказа">
        </Label>

        <!--Таблица книг-->
        <DataGrid x:Name="dt_books" Grid.Row="1"
                  Style="{StaticResource DataGrid_Style}">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox Checked="Select_Book"
                                      Unchecked="Delete_Book"></CheckBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genres.Name}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTextColumn Header="Автор" Binding="{Binding Current_Authors}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTextColumn Header="Издательство" Binding="{Binding Publications.Name}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}"></DataGridTextColumn>
                <DataGridTextColumn Header="Кол-во страниц" Binding="{Binding Count_Pages}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTextColumn Header="В наличии" Binding="{Binding Text_Status}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!--Кнопки для управления-->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Label x:Name="title_count_books"
               Grid.Row="0" Grid.Column="0"
               Style="{StaticResource Lable_Style}"
               FontSize="25"
               Content="Количество книг"
               VerticalContentAlignment="Center">
                </Label>
                <Label x:Name="count_books"
               Grid.Row="0" Grid.Column="0"
               Style="{StaticResource Lable_Style}"
               FontSize="25"
               Content="0"
               VerticalContentAlignment="Center"
               Foreground="Red"
               Margin="20 0 20 0">
                </Label>
            </StackPanel>
            <ComboBox x:Name="cb_readers"
                         Width="250"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource ComboBox_Style}"
                         ItemsSource="{Binding Readers}"
                         DisplayMemberPath="Name">
            </ComboBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="add_orders" Grid.Row="1"
                Style="{StaticResource Button_Style}"
                Content="Назад"
                Margin="20 0 0 0"/>
                <Button x:Name="bt_update" Grid.Row="1"
                Style="{StaticResource Button_Style}"
                Content="Сформировать"
                Margin="20 0 0 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
