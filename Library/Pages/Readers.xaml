<Page x:Class="Library.Pages.Readers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="">

    <Grid>
        <!--Верстка страницы-->
        <Grid.RowDefinitions>
            <RowDefinition Height="400*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--Таблица читателей-->
        <DataGrid x:Name="dt_readers"
                  Style="{StaticResource DataGrid_Style}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Binding="{Binding Fio}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTextColumn Header="Номер телефона" Binding="{Binding Number}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}" FontSize="14"></DataGridTextColumn>
                <DataGridTextColumn Header="Электронная почта" Binding="{Binding Mail}"
                                    HeaderStyle="{StaticResource DataGridColumnHeader_Style}"></DataGridTextColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="bt_more"
                                    Style="{StaticResource Button_Style_Data_Grid}"
                                    Content="Подробнее"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="bt_delete"
                                    Style="{StaticResource Button_Style_Data_Grid}"
                                    Width="30" Height="30">
                                <Button.Content>
                                    <Image Source="/Resources/trash_basket.png"></Image>
                                </Button.Content>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!--Кнопки управления-->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="add_orders" Grid.Row="1"
                Style="{StaticResource Button_Style}"
                Content="Добавить"
                Margin="20 0 0 0"
                Click="Add_Reader_Click"/>
            <Button x:Name="bt_update" Grid.Row="1"
                Style="{StaticResource Button_Style}"
                Content="Изменить"
                Margin="20 0 0 0"/>
        </StackPanel>
    </Grid>
</Page>
