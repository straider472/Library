<Page x:Class="Library.Pages.Add_Book"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="">

    <Grid>
        <!--Верстка страницы-->
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="300*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--Заголовок-->
        <Label x:Name="title"
               Grid.Row="0" Grid.Column="0"
               Style="{StaticResource Lable_Style}"
               FontSize="30"
               Content="Добавление книги">
        </Label>
        
        <!--Поля для добавления-->
        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
            <!--Разметка внутри грида-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--Левая часть-->
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Название">
                    </Label>
                    <TextBox x:Name="tb_name"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource TextBox_Style}">
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 15 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Цена">
                    </Label>
                    <TextBox x:Name="tb_price"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource TextBox_Style}">
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Кол-во дней">
                    </Label>
                    <TextBox x:Name="tb_count_days"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource TextBox_Style}">
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Дата отбытия">
                    </Label>
                    <DatePicker x:Name="dp_date_out"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right">
                    </DatePicker>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Дата отбытия">
                    </Label>
                    <DatePicker x:Name="dp_date_in"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right">
                    </DatePicker>
                </StackPanel>
            </StackPanel>

            <!--Правая часть-->
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Тип тура">
                    </Label>
                    <ComboBox x:Name="cb_type_tour"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource ComboBox_Style}"
                         ItemsSource="{Binding Типы_туров}"
                         DisplayMemberPath="Название">
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Страна">
                    </Label>
                    <ComboBox x:Name="cb_country"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource ComboBox_Style}"
                         ItemsSource="{Binding Страны}"
                         DisplayMemberPath="Название">
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Тип маршрута">
                    </Label>
                    <ComboBox x:Name="cb_type_marshroot"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource ComboBox_Style}"
                         ItemsSource="{Binding Маршруты}"
                         DisplayMemberPath="Количество_остановок">
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Тип питания">
                    </Label>
                    <ComboBox x:Name="cb_eating"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource ComboBox_Style}"
                         ItemsSource="{Binding Типы_питания}"
                         DisplayMemberPath="Название">
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Скидка">
                    </Label>
                    <ComboBox x:Name="cb_discount"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource ComboBox_Style}"
                         ItemsSource="{Binding Скидки}"
                         DisplayMemberPath="Название">
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!--Кнопки-->
        
    </Grid>
</Page>
