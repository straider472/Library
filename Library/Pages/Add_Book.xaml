<Page x:Class="Library.Pages.Add_Book"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="">

    <Grid>
        <!--Верстка страницы-->
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"></RowDefinition>
            <RowDefinition Height="300*"></RowDefinition>
            <RowDefinition Height="100*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--Заголовок-->
        <Label x:Name="title"
               Grid.Row="0" Grid.Column="0"
               Style="{StaticResource Lable_Style}"
               FontSize="30"
               Content="Добавление книги">
        </Label>
        
        <!--Поля для добавления-->
        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
            <!--Разметка внутри грида-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--Левая часть-->
            <StackPanel Orientation="Vertical" Grid.Column="0" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Название"
                    FontSize="25"
                    HorizontalContentAlignment="Center">
                    </Label>
                    <TextBox x:Name="tb_name"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource TextBox_Style}">
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="ISBN"
                    FontSize="25"
                    HorizontalContentAlignment="Center">
                    </Label>
                    <TextBox x:Name="tb_ISBN"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource TextBox_Style}">
                    </TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Кол-во страниц"
                    FontSize="25"
                    HorizontalContentAlignment="Center">
                    </Label>
                    <TextBox x:Name="tb_count_pages"
                         Width="200"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource TextBox_Style}">
                    </TextBox>
                </StackPanel>
            </StackPanel>

            <!--Правая часть-->
            <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Жанр"
                    FontSize="25"
                    HorizontalContentAlignment="Center">
                    </Label>
                    <ComboBox x:Name="cb_genre"
                         Width="250"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource ComboBox_Style}"
                         ItemsSource="{Binding Genres}"
                         DisplayMemberPath="Name">
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Издательство"
                    FontSize="25"
                    HorizontalContentAlignment="Center">
                    </Label>
                    <ComboBox x:Name="cb_publication"
                         Width="250"
                         Margin="0 0 0 0"
                         HorizontalAlignment="Right"
                         Style="{StaticResource ComboBox_Style}"
                         ItemsSource="{Binding Publications}"
                         DisplayMemberPath="Name">
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <Label
                    Style="{StaticResource Lable_Style}"
                    Width="200"
                    Height="50"
                    Margin="0 0 0 0"
                    HorizontalAlignment="Left"
                    Content="Авторы"
                    FontSize="25"
                    HorizontalContentAlignment="Center">
                    </Label>
                    <Button x:Name="bt_add_author" Margin="20 0 0 0"
                    Style="{StaticResource Button_Style}"
                    Content="Добавить автора"
                    Click="Go_To_Add_Authors"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!--Кнопки-->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="bt_go_back" Margin="20 0 0 0"
                Style="{StaticResource Button_Style}"
                Content="Назад"
                Click="Go_Back"/>
            <Button x:Name="bt_add_book" Margin="20 0 0 0"
                Style="{StaticResource Button_Style}"
                Content="Добавить"
                Click="Add_Book_Click"/>
        </StackPanel>
    </Grid>
</Page>
