<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Library" Height="500" Width="700">
    <Grid>
        <!--Разметка гридами-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--Заголовок-->
        <Label x:Name="title"
               Grid.Row="0" Grid.Column="0"
               Style="{StaticResource Lable_Style}"
               Content="Библиотека"
            >
        </Label>
        
        <!--Основная часть-->
        <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
            <Button x:Name="bt_auto"
                Style="{StaticResource Button_Style}"
                Content="Войти" Click="bt_auto_Click">
        </Button>
        <Button x:Name="bt_regist"
                Style="{StaticResource Button_Style}"
                Content="Зарегистироваться">
        </Button>
        </StackPanel>
        
        <!--Заготовка для перехода к странице с информацией о системе-->
    </Grid>
</Window>
